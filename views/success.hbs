<h1>{{t "success.title"}}</h1>

<p>{{t "success.description"}}</p>

<div class="link-container">
  <input type="text" id="link" value="{{viewUrl}}" readonly>
  <button onclick="copyLink()">{{t "success.copyButton"}}</button>
</div>

<p class="warning">{{t "success.warning"}}</p>

<script>
function copyLink() {
  const linkInput = document.getElementById('link');
  linkInput.select();
  document.execCommand('copy');
  alert('{{t "success.copied"}}');
}
</script>

