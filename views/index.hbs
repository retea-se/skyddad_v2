<h1>{{t "home.welcome"}}</h1>
<p>{{t "home.description"}}</p>

<form action="{{basePath}}/create" method="POST" aria-label="{{t "home.form.secretLabel"}}">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="form-group">
    <label for="secret">{{t "home.form.secretLabel"}} <span class="required" aria-label="obligatoriskt fält">*</span></label>
    <textarea id="secret" name="secret" rows="10" required maxlength="10000" aria-required="true" aria-describedby="secret-help"></textarea>
    <small id="secret-help" class="form-help">{{t "home.form.secretHelp" default="Max 10 000 tecken"}}</small>
  </div>

  <div class="form-group">
    <label for="pin">{{t "home.form.pinLabel"}}</label>
    <input type="text" id="pin" name="pin" maxlength="20" pattern="[a-zA-Z0-9]+" aria-describedby="pin-help" autocomplete="off">
    <small id="pin-help" class="form-help">{{t "home.form.pinHelp" default="Endast bokstäver och siffror"}}</small>
  </div>

  <div class="form-group">
    <label for="expires">{{t "home.form.expiresLabel"}}</label>
    <select id="expires" name="expires" aria-describedby="expires-help">
      <option value="1h">{{t "home.form.expires1h"}}</option>
      <option value="24h" selected>{{t "home.form.expires24h"}}</option>
      <option value="7d">{{t "home.form.expires7d"}}</option>
    </select>
    <small id="expires-help" class="form-help">{{t "home.form.expiresHelp" default="Meddelandet raderas automatiskt efter vald tid"}}</small>
  </div>

  <button type="submit">{{t "home.form.submit"}}</button>
</form>

