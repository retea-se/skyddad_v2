{
  "name": "skyddad-v2",
  "version": "2.0.0",
  "description": "Säker engångsdelning av hemligheter för retea.se",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"views/**/*.hbs\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"views/**/*.hbs\"",
    "prepare": "husky install",
    "migrate": "node scripts/run-migrations.js",
    "migrate:create": "node scripts/create-migration.js",
    "lighthouse": "lhci autorun",
    "mcp:chrome:start": "node tools/start-chrome-devtools-mcp.js --headless=true --viewport=1920x1080",
    "mcp:chrome:dry": "node tools/start-chrome-devtools-mcp.js --dry-run"
  },
  "keywords": [
    "secrets",
    "encryption",
    "one-time",
    "secure-sharing"
  ],
  "author": "retea.se",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "mysql2": "^3.6.5",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "i18n": "^0.15.1",
    "@sentry/node": "^7.91.0",
    "@sentry/integrations": "^7.91.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcrypt": "^5.0.2",
    "@types/express-session": "^1.17.10",
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@lhci/cli": "^0.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
